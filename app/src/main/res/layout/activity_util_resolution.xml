<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.zhudfly.connector.UtilTest.UtilResolutionActivity"
    >

  <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

  <RelativeLayout
      android:id="@+id/fullscreen_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:keepScreenOn="true"
      android:paddingBottom="20dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:paddingTop="40dp"
      >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WindowWidth:"
        />

    <TextView
        android:id="@+id/tvWindowWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView4"
        android:layout_toEndOf="@id/textView4"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WindowHeight:"
        android:layout_below="@id/textView4"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvWindowHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView5"
        android:layout_toEndOf="@id/textView5"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView5"
        />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StatusBarHeight:"
        android:layout_below="@id/textView5"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvStatusBarHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView9"
        android:layout_toEndOf="@id/textView9"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView9"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sp2Px:"
        android:layout_below="@id/textView9"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvSp2Px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView6"
        android:layout_toEndOf="@id/textView6"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView6"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dp2Px:"
        android:layout_below="@id/textView6"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvDp2Px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView7"
        android:layout_toEndOf="@id/textView7"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView7"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Px2Dx:"
        android:layout_below="@id/textView7"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvPx2Dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView8"
        android:layout_toEndOf="@id/textView8"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView8"
      />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Px2Sp:"
        android:layout_below="@id/textView8"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvPx2Sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView10"
        android:layout_toEndOf="@id/textView10"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView10"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeasureWidth:"
        android:layout_below="@id/textView10"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvMeasureWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView11"
        android:layout_toEndOf="@id/textView11"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView11"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeasureHeight:"
        android:layout_below="@id/textView11"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tvMeasureHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView12"
        android:layout_toEndOf="@id/textView12"
        android:text="-"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/textView12"
        />
  </RelativeLayout>

  <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fitsSystemWindows="true"
      >

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/black_overlay"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        style="?metaButtonBarStyle"
        >

      <Button
          android:id="@+id/dummy_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/dummy_button"
          style="?metaButtonBarButtonStyle"
          />

    </LinearLayout>
  </FrameLayout>

</FrameLayout>
